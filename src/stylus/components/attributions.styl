.attributions
  width 100%
  +media-query( $screen, $bp--tablet )
    width 550px
  +media-query( $screen, $bp--desktop )
    width 760px
  margin 0 auto
  padding 1em

.attributions dt,
.attributions dl
  display inline
  text-transform uppercase
  line-height 1.5
  font-size $size--pico
  font-family $font--headings

.attributions dt
  color $color--light-gray

.attributions dl
  color $color--dark-gray
