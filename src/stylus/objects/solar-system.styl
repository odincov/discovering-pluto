$year-in-second = 0.5

revolution($pl-year-in-days)
  return ($pl-year-in-days * $year-in-second / 365.2563)s
alphaRandom()
  return random(1000)*.001
random($n)
  return math(math(0, 'random') * $n + 1, 'floor')
stars($s, $max-area, $min-area = 0, $star-size = 0)
  $stars = ()
  for $i in (1..(($s)-1))
    $alphaRandom = alphaRandom()
    $hShadow = $min-area + random($max-area)
    $vShadow = $min-area + random($max-area)
    $spread = $star-size
    push($stars, ''+$hShadow+'px '+$vShadow+'px 0px '+$spread+'px rgba(255, 255, 255, '+$alphaRandom+')')
  $string = join(',',$stars)
  return unquote($string)


