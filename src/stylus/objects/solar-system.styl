    transform rotate(0deg)
  to
    transform rotate(-360deg)

.solar-system
  &:after
    content ""
    position absolute
    size 2px 2px
    top -2px
    left -2px
    background white
    box-shadow stars(500, 1800);
    border-radius 100px
  margin 0 auto
  size 100% 100%
  position relative
  div 
    border-radius 1000px
    top 50%
    left 50%
    position absolute
    z-index 999
    &:not(.solar-system__sun)
