.slide
  position relative
  overflow hidden
  +media-query( $screen, $bp--tablet )
    min-height 100%

.slide__content 
  position relative
  text-align left
  z-index 100
  padding 1em
  float left
  +media-query( $screen, $bp--tablet )
    margin-left 5%
    width 50%
  +media-query( $screen, $bp--desktop )
    width 40%
  h2, p
    color $color--black
.slide__content--inverted
  float right
  margin-right 5%
.slide__video--1990,
.slide__image
  float left
  width 100%
  +media-query( $screen, $bp--tablet )
    width 45%
  +media-query( $screen, $bp--desktop )
    width 55%



// slide wrappers
.slide--1978
  background-image url('../images/1978-pluton-charon-animation--inverted.gif')
  background-repeat no-repeat
  padding-bottom 300px
  background-position bottom center
  background-size 300px auto
  +media-query( $screen, $bp--desktop )
    background-position 86% center
    background-size 500px auto
    padding-bottom 0px
.slide--1990
  +media-query( $screen, $bp--tablet )
    background black
    h2, p 
      color white
.slide--1905
  +media-query( $screen, $bp--tablet )
    background black
    h2, p 
      color white
    p.date 
      display none
.slide--2006-b
  +media-query( $screen, $bp--tablet )
    h2, p
      color white
    background black
.slide--1915
  +media-query( $screen, $bp--tablet )
    background url('../images/1915-background.jpg')
    h2, p
      color white
.slide--2006-a
  +media-query( $screen, $bp--tablet )
    h2,p
      color $color--white
      text-align center
.slide--1965,
.slide--1979
  background $color--dark-blue
  h2
    color white
  p
    color $color--pale-white
.slide--1979
  background #01060d
.slide--1986,
.slide--1988-b
  background $color--deep-blue
  h2
    color white
  p
    color $color--pale-white
// backgrounds

.slide__bg
  display none
  +media-query( $screen, $bp--tablet )
    display block
  position absolute
  left 0
  top 0
  size 100% 100%  
  background-position center
  background-size cover
  z-index 10
.slide__bg--1848
  background-image url('../images/1848.jpg')
.slide__bg--1905
  background-image url('../images/1905-1.jpg')
.slide__bg--1915
  z-index 50
  background-image url('../images/1915-calculations.png')
.slide__bg--2006-b
  background-image url('../images/2006-b.jpg')



.slide__image--1978
  size 100% 400px
  +media-query( $screen, $bp--tablet )
    size 45% 400px
  +media-query( $screen, $bp--desktop )
    size 55% 400px
  border solid 1px red
  background-size auto 100%
  background-image url('../images/1978-pluton-charon-animation--inverted.gif')
  background-repeat no-repeat
  background-position center
  background-color white
.slide__video--1990
  video
    height auto
    width 100%
    +media-query( $screen, $bp--tablet )
      position absolute
      top 50%
      right 0
      transform translateY(-50%)
      width 50%
    +media-query( $screen, $bp--desktop )
      width 50%


.slide__video--2006-a
  display none
  +media-query( $screen, $bp--tablet )
    display block
  position absolute
  size 100% 100%
  video
    position absolute
    bottom 50% 
    right 50%
    transform translateX(50%) translateY(50%)
    min-width 100% 
    min-height 100% 
    width auto 
    height auto
    z-index -1000 
    overflow hidden
.slide__video-pattern
  position absolute
  top 0
  left 0
  size 100% 100%
  background url('../images/2006-a-screen-interlace.png')
