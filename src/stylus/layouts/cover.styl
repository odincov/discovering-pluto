.cover
  position relative
  overflow hidden
  min-height 100%
  //background-image url('../images/cover-background.jpg')
  background-color #010825
  background-size cover
  background-position center

.cover__title
  position relative
  font-family $font--headings--regular
  font-weight $weight--thin
  font-size $size--kilo
  letter-spacing rem(5px)
  text-transform uppercase
  margin-bottom 0
  margin-top 20%
  +media-query( $screen, $bp--tablet )
    font-size $size--tera
  +media-query( $screen, $bp--desktop )
    font-size $size--peta
  z-index 100

.cover__title strong
  display block
  margin-top .15em
  font-size $size--tera
  font-weight $weight--black
  +media-query( $screen, $bp--tablet )
    margin-top 0
    font-size $size--exa
  +media-query( $screen, $bp--tablet--landscape )
    font-size $size--zetta
  +media-query( $screen, $bp--desktop--medium )
    margin-top auto
    font-size $size--yotta

.cover__coming-soon
  position relative
  margin-top rem(-5px)
  font-family $font--headings--regular
  font-weight $weight--light
  font-size $size--milli
  text-transform uppercase
  letter-spacing rem(10px)
  color $color--white
  z-index 90

.cover__coming-soon span
  display block
  margin-left auto
  margin-right auto
  margin-top rem(10px)
  width rem(600px)
  //font-family $font--headings--regular
  font-size $size--nano
  line-height 1.25
  letter-spacing rem(2px)
  text-transform none
  color $color--light-gray

.cover__ui-hint
  position relative
  font-size $size--nano
  font-style italic
  letter-spacing rem(1px)
  color $color--light-gray
  z-index 1000

