.cover
  position relative
  overflow hidden
  min-height 100%
  background-color #011025
  background-size cover
  background-position center

.cover__title
  position relative
  margin-top 35%
  margin-bottom 0
  font-family $font--headings--condenced
  font-weight $weight--thin
  font-size $size--milli
  line-height 1
  letter-spacing rem(5px)
  text-transform uppercase
  +media-query( $screen, $bp--tablet )
    margin-top 20%
    font-size $size--mega
  +media-query( $screen, $bp--desktop )
    font-size $size--tera
  +media-query( $screen, $bp--desktop--medium )
    font-size $size--peta
  z-index 100

.cover__title strong
  display block
  font-size $size--peta
  font-weight $weight--black
  +media-query( $screen, $bp--tablet )
    margin-top 0
    font-size $size--exa
  +media-query( $screen, $bp--desktop )
    margin-top auto
    font-size $size--zetta
  +media-query( $screen, $bp--desktop--medium )
    margin-top auto
    font-size $size--yotta

.cover__coming-soon
  position relative
  font-family $font--headings--condenced
  font-weight $weight--light
  font-size $size--pico
  text-transform uppercase
  letter-spacing rem(3px)
  color $color--white
  z-index 100
  margin-left auto
  margin-right auto
  +media-query( $screen, $bp--tablet )
    margin-top rem(-1px)
    font-size $size--milli
    width rem(450px)
    letter-spacing rem(6px)
  +media-query( $screen, $bp--tablet--landscape )
    width rem(450px)
  +media-query( $screen, $bp--desktop )
    width rem(500px)
    letter-spacing rem(8px)
  +media-query( $screen, $bp--desktop--medium )
    width rem(550px)
    letter-spacing rem(10px)

.cover__coming-soon span
  display block
  margin-top rem(10px)
  padding 0 rem(10px)
  font-size $size--pico
  line-height 1.4
  letter-spacing rem(1px)
  text-transform none
  color $color--light-gray
  +media-query( $screen, $bp--tablet )
    padding 0
    font-size $size--nano
    line-height 1.25
    letter-spacing rem(2px)

.cover__ui-hint
  position relative
  font-size $size--nano
  font-style italic
  letter-spacing rem(1px)
  color $color--light-gray
  z-index 100

.cover__layer
  position absolute
  top 50%
  left 50%
  background-repeat no-repeat

.cover__layer--tombaugh
